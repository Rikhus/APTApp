<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rikhus.aptapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_apt"
        android:label="@string/app_name"
        android:versionCode="2"
        android:versionName="2.2"
        android:windowSoftInputMode="adjustNothing"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_apt_round"
        android:supportsRtl="true"
        android:theme="@style/CustomTheme">
        <receiver android:name="com.rikhus.aptapp.AptWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/apt_widget_info" />
        </receiver>

        <activity android:name="com.rikhus.aptapp.ScheduleActivity" />
        <activity android:name="com.rikhus.aptapp.GroupSelectActivity" />
        <activity android:name="com.rikhus.aptapp.SelectUserTypeActivity" android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>