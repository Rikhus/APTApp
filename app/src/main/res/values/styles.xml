<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/colorForeground</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/Exo2TextViewStyle</item>
        <item name="android:buttonStyle">@style/Exo2ButtonStyle</item>
    </style>

    <style name="LightTheme" parent="BaseTheme">
        <item name="colorAccent">#927FBF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="apt_first_subgroup_color">#BEF9E7</item>
        <item name="apt_second_subgroup_color">#C2CBEF</item>
        <item name="apt_all_subgroups_color">#EDF5F5</item>
        <item name="apt_text_color">#5F5F5F</item>
    </style>

    <style name="DarkTheme" parent="BaseTheme">
        <item name="colorAccent">#9F8CCD</item>
        <item name="colorPrimaryDark">#363B4E</item>
        <item name="colorPrimary">#363B4E</item>
        <item name="apt_first_subgroup_color">#8CBFB0</item>
        <item name="apt_second_subgroup_color">#767D9B</item>
        <item name="apt_all_subgroups_color">#4A5068</item>
        <item name="apt_text_color">#FFFFFF</item>
    </style>

    <style name="Exo2TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/exo_2</item>
    </style>
    <style name="Exo2ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/exo_2</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="fontFamily">@font/exo_2</item>
    </style>

    <style name="TabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/exo_2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabLayout_Theme" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyTextInputLabel" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="android:textColorHint">?attr/apt_text_color</item>
    </style>

</resources>