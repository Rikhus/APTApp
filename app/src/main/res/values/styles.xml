<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/colorForeground</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#fafafa</item>
        <item name="android:textViewStyle">@style/Exo2TextViewStyle</item>
        <item name="android:buttonStyle">@style/Exo2ButtonStyle</item>
    </style>

    <style name="Exo2TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/exo_2</item>
    </style>
    <style name="Exo2ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/exo_2</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#9B51E0</item>
        <item name="fontFamily">@font/exo_2</item>
    </style>

    <style name="TabText" parent="Base.Widget.Design.TabLayout">
        <item name="android:fontFamily">@font/exo_2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TabLayout_Theme" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyTextInputLabel" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">#9B51E0</item>
        <item name="colorControlActivated">#9B51E0</item>
        <item name="colorAccent">#9B51E0</item>
    </style>

</resources>