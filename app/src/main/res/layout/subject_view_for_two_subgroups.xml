<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subjectLayout"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_element"
    android:backgroundTint="?attr/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/subjectNumberView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start"
            android:textSize="20sp"
            android:textColor="?attr/apt_text_color"
            android:text="I пара"/>
        <TextView
            android:id="@+id/subjectTimeView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center|end"
            android:textColor="?attr/apt_text_color"
            android:text="08:00 - 09:25"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:background="@drawable/first_subgroup_from_two_rounded"
        android:backgroundTint="?attr/apt_first_subgroup_color">


        <LinearLayout
            android:id="@+id/firstSubgroupSubjectInfo"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/firstSubgroupSubjectNameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_weight="2"
                android:textColor="?attr/apt_text_color"
                android:text="@string/name"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/firstSubgroupSubjectAuditoriumView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|start"
                    android:text="@string/auditorium_example"
                    android:textColor="?attr/apt_text_color"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/firstSubgroupTeacherNameView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:text="@string/teacher_name_example"
                    android:textColor="?attr/apt_text_color"
                    android:gravity="center|end"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:background="@drawable/second_subgroup_from_two_rounded"
        android:backgroundTint="?attr/apt_second_subgroup_color">


        <LinearLayout
            android:id="@+id/secondSubgroupSubjectInfo"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/secondSubgroupSubjectNameView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center|start"
                android:layout_marginTop="8dp"
                android:text="@string/name"
                android:textColor="?attr/apt_text_color"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/secondSubgroupSubjectAuditoriumView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center|start"
                    android:text="@string/auditorium_example"
                    android:textColor="?attr/apt_text_color"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/secondSubgroupTeacherNameView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:text="@string/teacher_name_example"
                    android:textColor="?attr/apt_text_color"
                    android:gravity="center|end"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>